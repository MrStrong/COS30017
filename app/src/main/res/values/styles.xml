<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">18sp</item>
    </style>

    <style name="TableRowTextViewName">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    <style name="TableRowTextViewDate" parent="TableRowTextViewName">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
    <style name="TableRow">
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:background">@color/colorTableBackground</item>-->
    </style>

    <style name="activity_metadata_edit_form" parent="AppTheme">

        <!--<item name="android:textViewStyle">@style/FormLabel</item>-->
        <item name="android:textSize">18sp</item>

    </style>

    <style name="FormLabel">
        <item name="android:textSize">18sp</item>
    </style>
</resources>