<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_metadata_edit"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cos30017.a04p.imagemetadata.MetadataEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:paddingRight="15dp"
                    android:id="@+id/imageViewImage" />

                <TableLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/label_form_name"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textLabelName"
                        android:layout_column="1"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:id="@+id/inputName" />

                    <TextView
                        android:text="@string/label_from_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textLabelObtainedDate"
                        android:layout_column="1"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:layout_gravity="fill_horizontal"
                        android:id="@+id/inputObtainedDate" />
                </TableLayout>
            </LinearLayout>

            <TableLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:id="@+id/ratingBar"
                        android:rating="3"
                        android:isIndicator="false" />
                </TableRow>

                <TextView
                    android:text="@string/label_from_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLabelRating"
                    android:layout_column="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_gravity="fill_horizontal"
                    android:id="@+id/inputLocations" />

                <TextView
                    android:text="@string/label_from_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLabelKeywords"
                    android:layout_column="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_gravity="fill_horizontal"
                    android:id="@+id/inputKeywords" />

                <TextView
                    android:text="@string/label_form_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLabelObtainer"
                    android:layout_column="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:layout_gravity="fill_horizontal"
                    android:id="@+id/inputObtainer" />

                <TextView
                    android:text="@string/label_form_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLabelShare"
                    android:layout_column="1"/>

                <ToggleButton
                    android:textOff="@string/label_form_share"
                    android:textOn="@string/label_form_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButtonShare" />

            </TableLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

