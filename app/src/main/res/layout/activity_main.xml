<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        tools:context="cos30017.a03p.imagebrowser.MainActivity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableRow"
            android:onClick="bananaBtnClickHandler">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/banana"
                android:id="@+id/imageView"
                android:adjustViewBounds="false"
                android:cropToPadding="false" />

            <TextView
                android:text="@string/image_name_banana"
                style="@style/TableRowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableRow"
            android:onClick="grapeBtnClickHandler">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/grape"
                android:id="@+id/imageView2" />

            <TextView
                android:text="@string/image_name_grape"
                style="@style/TableRowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableRow"
            android:onClick="grapefruitBtnClickHandler">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/grapefruit"
                android:id="@+id/imageView3" />

            <TextView
                android:text="@string/image_name_grapefruit"
                style="@style/TableRowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TableRow"
            android:onClick="pineappleBtnClickHandler">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/pineapple"
                android:id="@+id/imageView4" />

            <TextView
                android:text="@string/image_name_pineapple"
                style="@style/TableRowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />
        </TableRow>
    </TableLayout>
</LinearLayout>

